{% comment %}
  This template will be automatically generated for you if the file doesn't exist,
  but where's the fun in having no control? Define your layout below.

  The 'layout settings.customer_layout' line is inserted at the top of every customer account template.
  Your theme's settings determine to use the 'default' or 'theme' customer templates.
  More info:
    - http://www.tetchi.ca/shopify-theme-from-scratch-part-11/
{% endcomment %}

{% layout settings.customer_layout %}
<div class="custom-acc-page shopify-section">
  <div class="wrapper-body-wrap">
  <header class="collection-header collection-header-sections">
    <div class="relative container mb-0">
        <div class="collection-wrapper page-header collection-static mb-35">
            <div class=" container-regular">
              
              <h1 class="text-center" 
                  {% if settings.enable_multilang %} data-translate="customer.register"{% endif %}>
                {{ 'customer.register.register' | t }}
              </h1>
            </div>    
        </div>
    </div>
    <div class="wrapper-body-wrap section-wrap mb-35">
      <div class="line">
        <span class="dot"></span>
      </div>
    </div>
</header>
  <div class="container wrapper-body-wrap">


    <div class="create-an-account">

      {% form 'create_customer' %}

      {% render 'form-errors-custom', form: form %}

      <div class="form-group">
        <label for="first_name">
          <span {% if settings.enable_multilang %}data-translate="customer.register_first_name"{%endif%}>
            {{ 'customer.register_first_name' | t }}
          </span>
        </label>
        <input type="text" value="" name="customer[first_name]" id="first_name" {% if form.errors contains "first_name" %}class="error"{% endif %} >
      </div>

      <div class="form-group">
        <label for="last_name">
          <span {% if settings.enable_multilang %}data-translate="customer.register_last_name"{%endif%}>
            {{ 'customer.register_last_name' | t }}
          </span>
        </label>      
        <input type="text" value="" name="customer[last_name]" id="last_name" {% if form.errors contains "last_name" %}class="error"{% endif %} >
      </div>

      <div class="form-group">
        <label for="email">
          <span {% if settings.enable_multilang %}data-translate="customer.login.email"{%endif%}>
            {{ 'customer.login.email' | t }}
          </span>
          <em>*</em>
        </label>      
        <input type="email" value="" name="customer[email]" id="email" {% if form.errors contains "email" %}class="error"{% endif %}  >
      </div>

      <div class="form-group">
        <label for="password">
          <span {% if settings.enable_multilang %}data-translate="customer.login.password"{%endif%}>
            {{ 'customer.login.password' | t }}
          </span>
          <em>*</em>
        </label>      
        <input type="password" value="" name="customer[password]" id="create_password" {% if form.errors contains "password" %}class="error"{% endif %}>
      </div>

      <div class="action-btn">
        <input type="submit" 
               {% if settings.enable_multilang %}data-translate="customer.register"{%endif%} value="{{ 'customer.register.register' | t }}" class="btn btn-padd42">
      </div>
      {% endform %}
    </div>
  </div>
</div>
