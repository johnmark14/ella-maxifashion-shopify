            {
                "type": "text",
                "id": "button-label",
                "label": "Button label",
                "default": "Повече за видовете тяло"
            }   	
        ],
        "blocks": [
            {
                "type": "image",
                "name": "Image",
                "settings": [		  	
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                },
                {
                    "type" : "text",
