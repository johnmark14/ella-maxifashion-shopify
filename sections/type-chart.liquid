<style>
  .wrapper-body-wrap.bordered{
    border: 1px solid #222222;
    padding: 60px 40px 25px 40px;
  }
   .types-list .row .item .banner-item:before{
     content: "";
     display: block;
     position: absolute;
     top: 25%;
     bottom: 0;
     left: 10%;
     right: 10%;
  	 background-color: #BDE9E0;
   }
  .types-list .row .item .banner-item .img-box {
    position: relative;
    height: initial;
    padding-bottom: 20px;
    margin: 15px;
    margin-bottom: 20px;
  }
  .types-list .row .item .banner-item .img-box a{
    border-radius: 0%;
    background: unset;
    position: relative;
  }
  .flex-column{
  	flex-direction: column;
  }
  .types-list .row .item .banner-item .img-box a img{
    margin-left: auto;
    margin-right: auto;
    max-width: 70px;
  }
</style>
{% if section.blocks.size > 0 %}
<div class="wrapper-body-wrap section-wrap maxi-banners-list types-list" id="maxy-{{section.id}}" data-loader-script="{{ 'halo.slide-blog.js' | asset_url }}">
    <div class="container wrapper-body-wrap bordered">
        {% if section.settings.widget_title != blank %}
        <div class="maxi-title">   
                <h2 class="text-center">
                    <span class="title"> 
                        {{ section.settings.widget_title }}
                    </span>
                </h2>
        </div>
        {% endif %}
        <div class="banners-maxy types-banners">
            <div class="row">
                {% for block in section.blocks %}
                    
                <div class="item col-2">
                    <div class="banner-item">
                        <div class="img-box">
                            {%- assign preview_img = block.settings.image -%}
                            <a href="{{ block.settings.link }}" class="d-flex color-black flex-column flex-center">
 
                                {%- assign img_url = block.settings.image | img_url: 'original', crop: 'center' -%}

                                	<img data-src="{{ img_url }}" alt="{{ block.settings.image.alt | default: shop.name }}" itemprop="logo"
                                    class="lazyload" data-sizes="auto">
                                    {% if block.settings.title != blank %}
                                      <span class="desc-box d-flex flex-center flex-column text-center">
                                          <span class="h-font">{{ block.settings.title }}</span>
                                          <svg class="initial" width="26" height="9" viewBox="0 0 42 9" fill="none" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M32.5 0L41.5 4.5L32.5 9V5H0.5V4H32.5V0Z" fill="#000"></path>
                                          </svg>
                                     </span>
                              	   {% endif %}
                              </a>
                        	</div>
                    </div>
                </div>
                {% endfor %}
                <div class="col-12" style="padding-top: 35px;">
                    <a class="m-auto maxi-button d-flex flex-center" href="{{section.settings.button-url}}">
                        <span>{{section.settings.button-label}}</span>
                        <svg width="42" height="9" viewBox="0 0 42 9" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M32.5 0L41.5 4.5L32.5 9V5H0.5V4H32.5V0Z" fill="white"></path>
                        </svg>
                    </a>
                </div>
            </div>       
        </div>
    </div>
</div>
{% endif %}

